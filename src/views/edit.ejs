<%- include('partials/_header') %>

<div class="container">
    <div class="row">
        <!-- FORM -->
        <div class="col-md-5 offset-md-3 mt-4">
            <h2 class="text-info text-center">Editar un producto</h2>
            <div class="card">
                <div class="card-body">
                    <form action="/update/<%= products._id %>" method="POST">
                        <div class="form-group">
                            <input type="text" name="title" placeholder="Nombre del Producto" value="<%= products.title%>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="price" placeholder="Precio del Producto" value="<%= products.price%>" class="form-control">
                        </div>
                        <div class="form-group">
                            <textarea name="description"  cols="80" class="form-control"><%= products.description%></textarea>
                        </div>
                        <button type="submit" class="btn btn-info btn-block">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/_footer') %>